{
	"name": "webext-domain-permission-toggle",
	"version": "1.0.0",
	"description": "Browser-action context menu to request permission for the current tab.",
	"keywords": [
		"browser",
		"chrome",
		"extension",
		"firefox",
		"permission",
		"ui",
		"webextension"
	],
	"repository": "fregante/webext-domain-permission-toggle",
	"license": "MIT",
	"author": "Federico Brigante <opensource@bfred.it> (bfred.it)",
	"module": "index.js",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"prepack": "tsc --sourceMap false",
		"test": "xo && tsc --noEmit",
		"watch": "tsc --watch"
	},
	"xo": {
		"envs": [
			"browser",
			"webextensions"
		],
		"extensions": [
			"ts"
		],
		"overrides": [
			{
				"files": "**/*.ts",
				"extends": "xo-typescript"
			}
		],
		"rules": {
			"no-alert": "off"
		}
	},
	"dependencies": {
		"webext-additional-permissions": "^0.1.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.4.0",
		"@types/chrome": "0.0.86",
		"@types/firefox-webext-browser": "^67.0.2",
		"@typescript-eslint/eslint-plugin": "^1.9.0",
		"@typescript-eslint/parser": "^1.11.0",
		"eslint-config-xo-typescript": "^0.15.0",
		"typescript": "^3.5.0",
		"xo": "*"
	}
}
